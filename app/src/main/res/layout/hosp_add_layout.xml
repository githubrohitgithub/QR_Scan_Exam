<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/border"
        android:layout_height="wrap_content"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/l1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Hospital ID: "/>

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/hospid"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:fontFamily="@font/gotham"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="#f2f2f2"
                android:layout_height="60dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/l2"
            android:layout_below="@+id/l1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Hospital Name : "/>


            <EditText
                android:layout_width="match_parent"
                android:id="@+id/hospname"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:fontFamily="@font/gotham"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="#f2f2f2"
                android:layout_height="60dp" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/l3"
            android:layout_below="@+id/l2"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Hospital address :- "/>

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/hospaddress"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:fontFamily="@font/gotham"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="#f2f2f2"
                android:layout_height="60dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_below="@+id/l3"
            android:id="@+id/l4"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dp"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Hospital phone :- "/>

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/hospphone"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:fontFamily="@font/gotham"
                android:inputType="phone"
                android:textColor="@color/black"
                android:textColorHint="#f2f2f2"
                android:layout_height="60dp" />

        </LinearLayout>







        <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l4"
            app:backgroundTint="@null"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_3d"
            android:textColor="@color/white"
            android:id="@+id/addbtn"
            android:text="Add"/>


    </RelativeLayout>











</ScrollView>