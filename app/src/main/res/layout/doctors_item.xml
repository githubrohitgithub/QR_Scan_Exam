<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:padding="10dp"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    android:layout_height="wrap_content">




    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/frame_3d"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="50dp"
            android:id="@+id/image"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_doctor_logo"
            android:layout_height="50dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:id="@+id/doctor_name"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:fontFamily="@font/calibri"
            android:layout_marginTop="8dp"
            android:text="Doctor Name :- Rohit"
            android:padding="5dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"

            />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/doctor_qualification"
            android:text="Qualification :- MBBS"
            android:layout_below="@+id/doctor_name"
            android:textSize="12sp"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="@color/white"
            android:fontFamily="@font/calibri"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"

            />


        <TextView
            android:layout_width="match_parent"
            android:id="@+id/doctor_imrno"
            android:textStyle="bold"
            android:layout_below="@+id/doctor_qualification"
            android:text="IMR NO :- IMR454545"
            android:textSize="12sp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:fontFamily="@font/calibri"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/doctor_email"
            android:layout_below="@+id/doctor_imrno"
            android:text="Email :- rohit@gmail.com"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:fontFamily="@font/calibri"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/doctor_specialist"
            android:text="Specialist :- Dermatologist"
            android:layout_below="@+id/doctor_email"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:padding="5dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/calibri"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"

            />

        <Button
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textAllCaps="false"
            android:background="@drawable/button_3d"
            android:layout_below="@+id/doctor_specialist"
            android:fontFamily="@font/gotham"
            android:id="@+id/book_apointment"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>