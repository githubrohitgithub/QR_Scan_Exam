<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/patientgbgradient"
    tools:context=".LandingActivity">

    <View
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:background="@drawable/ic_side_right_bg" />


    <View
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:background="@drawable/ic_side_left_bg" />


    <ImageView
        android:id="@+id/doc"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_above="@+id/box"
        android:src="@drawable/logo" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="10dp"
        android:id="@+id/box"
        android:layout_alignParentBottom="true"
        android:background="@drawable/frame_3d"
        android:orientation="vertical"
        android:gravity="start"
        android:padding="14dp">

        <TextView
            android:layout_width="match_parent"
            android:text="@string/app_name"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/gotham"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:textSize="20sp"
            android:id="@+id/logo"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="match_parent"
            android:id="@+id/doctor"
            android:text="Teacher Login"
            android:textStyle="bold"
            app:backgroundTint="@null"
            android:textColor="#FFF"
            android:layout_margin="5dp"
            android:background="@drawable/button_3d"
            android:layout_marginTop="30dp"
            android:textAllCaps="false"
            android:fontFamily="@font/gotham"
            android:padding="10dp"
            android:layout_height="60dp"/>


        <Button
            android:layout_width="match_parent"
            android:id="@+id/patient"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:layout_margin="5dp"
            android:background="@drawable/button_3d"
            app:backgroundTint="@null"
            android:textAllCaps="false"
            android:fontFamily="@font/gotham"
            android:text="Student Login"
            android:padding="10dp"
            android:layout_height="60dp"/>



    </LinearLayout>


</RelativeLayout>