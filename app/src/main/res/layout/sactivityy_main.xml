<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/patientgbgradient"
    tools:context=".student.Activities.SMainActivityy">

    <View
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_width="22dp"
        android:layout_height="match_parent"
        android:background="@drawable/ic_side_right_bg" />
    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_squares"
        android:id="@+id/plusbutton"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="30dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <TextView
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham"
                android:shadowColor="#57000000"
                android:text="Student Register"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                app:drawableStartCompat="@drawable/ic_keyboard_arrow_left_black_24dp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@drawable/frame_3d"
                android:layout_height="wrap_content">


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColorHint="#000000">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/calibri"
                        android:id="@+id/etname"
                        android:hint="Enter your name"
                        android:inputType="text"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColorHint="#000000">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/calibri"
                        android:id="@+id/etemail"
                        android:hint="Enter your Email id"
                        android:inputType="text"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColorHint="#000000">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/calibri"
                        android:id="@+id/etrno"
                        android:hint="Enter your Register No."
                        android:inputType="text"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColorHint="#000000">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/calibri"
                        android:id="@+id/etpassword"
                        android:hint="Create password"
                        android:inputType="text"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>



                <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                    android:id="@+id/btnregister"
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/button_3d"
                    app:spinning_bar_width="4dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:text="Register"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="15sp"
                    android:elevation="20dp"
                    app:finalCornerAngle="10dp"
                    app:initialCornerAngle="10dp"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    app:spinning_bar_color="#FFF"
                    app:spinning_bar_padding="6dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="end"
                    android:id="@+id/loginlink"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:text="Already registered ?"/>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>



</RelativeLayout>